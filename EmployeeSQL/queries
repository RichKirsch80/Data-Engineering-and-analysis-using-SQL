--List employee: number, last name, first name, sex and salary. GTG
SELECT employees.emp_no, employees.last_name, employees.first_name, employees.sex, salaries.salary
FROM salaries
INNER JOIN employees ON
employees.emp_no=salaries.emp_no; 

--List first name, last name, and hire date who were hired in 1986. NEED HELP
SELECT first_name, last_name, hire_date FROM Employees
WHERE date_part('year', hire_date) = '1986';

--List
 the manager of each department: dept number, dept name, manager emp number, last name and first name NEED HELP
SELECT dept_manager.dept_no, dept_manager.emp_no, departments.dept_name, employees.last_name, employees.first_name
FROM dept_manager, departments
INNER JOIN employees ON
dept_manager.emp_no=employees.emp_no;

--List the department of each employee: employee number, last name, first name and dept name. NEED HELP
SELECT  dept_manager.emp_no, employees.last_name, employees.first_name, departments.dept_name
FROM dept_manager, departments
INNER JOIN employees ON
dept_manager.emp_no=employees.emp_no;

--List first name, last name and sex for employees whose firstname is "Hercules" and last name begins with B. GTG
SELECT first_name, last_name, sex FROM Employees
Where first_name = 'Hercules'
AND last_name LIKE 'B%';

--List all employees in the Sales department: employee number, last name, first name and dept name.
SELECT employees.emp_no, employees.last_name, employees.first_name, departments.dept_name 
FROM Departments
WHERE dept_no = 'd007';

SELECT * FROM departments;


--List all employee in sales and development: employee number, last name, first name and dept name.
SELECT employees.emp_no, employees.last_name, employees.first_name, departments.dept_name 
FROM Departments
WHERE dept_no = 'd007'
OR dept_no = 'd005';

--In descending order, list frequency count of employee last names.
SELECT last_name, COUNT(*) FROM Employees GROUP BY last_name ORDER BY COUNT(*) DESC;